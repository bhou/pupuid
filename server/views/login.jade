    .content
      // BEGIN LOGIN FORM
      form.form-vertical.login-form(action="/doLogin", method="post")
        h3.form-title Login to your account
        .alert.alert-error.hide
          button.close(data-dismiss="alert")
          span Enter any email and password.
        .control-group
          // ie8, ie9 does not support html5 placeholder, so we just show field title for that
          label.control-label.visible-ie8.visible-ie9 Email
          .controls
            .input-icon.left
              i.icon-envelope
              input.m-wrap.placeholder-no-fix(type="text", autocomplete="off", placeholder="Email", name="email")
        .control-group
          label.control-label.visible-ie8.visible-ie9 Password
          .controls
            .input-icon.left
              i.icon-lock
              input.m-wrap.placeholder-no-fix(type="password", autocomplete="off", placeholder="Password", name="password")
        .form-actions
          label.checkbox
            input(type="checkbox", name="remember", value="1")
            | Remember me
          button.btn.blue.pull-right(type="submit")
            | Login
            i.m-icon-swapright.m-icon-white
        .forget-password
          h4 Forgot your password ?
          p
            | no worries, click
            a#forget-password(href="javascript:;") here
            | to reset your password.
        .create-account
          p
            | Don"t have an account yet ?
            a#register-btn(href="javascript:;") Create an account
      // END LOGIN FORM
      // BEGIN FORGOT PASSWORD FORM
      form.form-vertical.forget-form(action="index.html", method="post")
        h3 Forget Password ?
        p Enter your e-mail address below to reset your password.
        .control-group
          .controls
            .input-icon.left
              i.icon-envelope
              input.m-wrap.placeholder-no-fix(type="text", placeholder="Email", autocomplete="off", name="email")
        .form-actions
          button#back-btn.btn(type="button")
            i.m-icon-swapleft
            | Back
          button.btn.blue.pull-right(type="submit")
            | Submit
            i.m-icon-swapright.m-icon-white
      // END FORGOT PASSWORD FORM
      // BEGIN REGISTRATION FORM
      form.form-vertical.register-form(action="/doRegister", method="post")
        h3 Sign Up
        p Enter your personal details below:
        .control-group
          label.control-label.visible-ie8.visible-ie9 Full Name
          .controls
            .input-icon.left
              i.icon-font
              input.m-wrap.placeholder-no-fix(type="text", placeholder="Full Name", name="fullname")
        .control-group
          label.control-label.visible-ie8.visible-ie9 Username
          .controls
            .input-icon.left
              i.icon-user
              input.m-wrap.placeholder-no-fix(type="text", autocomplete="off", placeholder="Username", name="name")
        p Enter your account details below:
        .control-group
          // ie8, ie9 does not support html5 placeholder, so we just show field title for that
          label.control-label.visible-ie8.visible-ie9 Email
          .controls
            .input-icon.left
              i.icon-envelope
              input.m-wrap.placeholder-no-fix(type="text", placeholder="Email", name="email")
        .control-group
          label.control-label.visible-ie8.visible-ie9 Password
          .controls
            .input-icon.left
              i.icon-lock
              input#register_password.m-wrap.placeholder-no-fix(type="password", autocomplete="off", placeholder="Password", name="password")
        .control-group
          label.control-label.visible-ie8.visible-ie9 Re-type Your Password
          .controls
            .input-icon.left
              i.icon-ok
              input.m-wrap.placeholder-no-fix(type="password", autocomplete="off", placeholder="Re-type Your Password", name="rpassword")
        .control-group
          .controls
            label.checkbox
              input(type="checkbox", name="tnc")
              | I agree to the
              a(href="#") Terms of Service
              | and
              a(href="#") Privacy Policy
            #register_tnc_error
        .form-actions
          button#register-back-btn.btn(type="button")
            i.m-icon-swapleft
            | Back
          button#register-submit-btn.btn.green.pull-right(type="submit")
            | Sign Up
            i.m-icon-swapright.m-icon-white
